{
  "name": "radaller-core",
  "version": "0.2.11",
  "description": "Cms engine, that allows to store content as yaml.",
  "main": "./dist/index.js",
  "directories": {
    "lib": "dist"
  },
  "files": [
    "dist",
    "src",
    "*.md",
    "*.js"
  ],
  "browser": {
    "fs-extra": false
  },
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "build": "babel src -d dist --ignore '**/*.test.js'",
    "docs:api": "./node_modules/.bin/jsdoc2md --partial docs/partials/main.hbs docs/partials/header.hbs docs/partials/sig-link.hbs docs/partials/sig-link-html.hbs docs/partials/sig-link-parent.hbs docs/partials/link.hbs docs/partials/body.hbs --no-cache --helper jsdochelper.js  --files \"src/**/*.js\" > docs/api.md",
    "docs:prepare": "./node_modules/.bin/gitbook install",
    "docs:build": "npm run docs:prepare && npm run docs:api && gitbook build",
    "docs:serve": "npm run docs:prepare && npm run docs:api && gitbook serve"
  },
  "jest": {
    "verbose": true,
    "coveragePathIgnorePatterns": [
      "/dist/",
      "/node_modules/"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/radaller/radaller-core.git"
  },
  "keywords": [
    "cms",
    "git",
    "file",
    "yaml",
    "react"
  ],
  "dependencies": {
    "ajv": "^5.2.2",
    "axios": "^0.18.0",
    "fs-extra": "^4.0.2",
    "github-api": "^3.0.0",
    "js-base64": "^2.3.2",
    "js-yaml": "^3.10.0",
    "json-schema-ref-parser": "^4.0.0",
    "pluralize": "^7.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.1.18",
    "babel-core": "^6.1.18",
    "babel-jest": "^21.2.0",
    "babel-polyfill": "^6.1.18",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.1.18",
    "babel-runtime": "^6.26.0",
    "gitbook-cli": "^2.3.2",
    "istanbul": "^0.4.5",
    "jest": "^21.2.1",
    "jsdoc-babel": "^0.3.0",
    "jsdoc-to-markdown": "^3.0.0"
  },
  "bugs": {
    "url": "https://github.com/radaller/radaller-core/issues"
  },
  "homepage": "https://github.com/radaller/radaller-core#readme"
}
